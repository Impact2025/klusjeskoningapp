rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read on families collection to find family by code
    match /families/{familyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == familyId;
    }

    // Public read access for good causes; writes restricted to admin account
    match /goodCauses/{causeId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "admin@klusjeskoning.nl";
    }

    // Public read access for blog posts; writes restricted to admin account
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "admin@klusjeskoning.nl";
    }

    // Public read access for reviews; writes restricted to admin account
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "admin@klusjeskoning.nl";
    }
  }
}
